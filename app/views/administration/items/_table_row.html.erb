<%= form_for item, url: administration_item_url(item.id), html: {:method => :put} do |f| %>
	<td>
		<td> <%= item.original_price.round(2) %></td>
		<td> <%= f.text_field :discount_percentage, value: item.discount_percentage, class: "form-control" %>	</td>
		<td> <%= item.price.round(2) %></td>

    <td> <%= f.submit "Modifier", class: "btn btn-secondary"  %> </td>
	</tr>
<% end %>